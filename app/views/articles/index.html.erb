<div class="container">
  <div class="col-xs-12">
    <h1>Blog</h1>
    <% @articles.each do |article| %>
    <div class="col-xs-12">
      <h3>
      <%= link_to article.title, article_path(article) %>
      </h3>
      <%= truncate(article.body, length:100) %>
    </div>
    <% end %>
  </div>
</div>
  